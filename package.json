{
  "name": "shifts-dashboard",
  "version": "1.0.0",
  "private": true,
  "description": "Shift management dashboard for Shiftboard with Azure Container Apps deployment",
  "keywords": [
    "shiftboard",
    "shifts",
    "dashboard",
    "azure",
    "container-apps"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "backend",
    "client"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "test": "npm test --workspaces --if-present",
    "clean": "rm -rf backend/dist backend/coverage client/dist client/coverage"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
